{
	"id": "nodebb-plugin-registration-aliverify",
	"name": "Registration Ali-verfiy",
	"description": "在注册时允许你使用阿里验证码进行验证。Registration via alibaba verify service.",
	"url": "https://github.com/NodeBB-China/nodebb-plugin-registration-aliverify",
	"library": "./library.js",
	"hooks": [
		{
			"hook": "static:app.load", "method": "init"
		},
		{
			"hook": "filter:admin.header.build", "method": "addAdminNavigation"
		},
		{
			"hook": "filter:register.build", "method": "addCaptcha"
		},
		{
			"hook": "filter:register.check", "method": "checkRegister"
		}
	],
	"staticDirs": {
		"static": "./static"
	},
	"less": [
		"static/style.less"
	],
	"scripts": [
		"static/lib/main.js"
	],
	"templates": "static/templates"
}
