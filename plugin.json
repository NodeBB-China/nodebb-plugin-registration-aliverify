{
	"id": "nodebb-plugin-registration-aliverify",
	"name": "Registration Ali-verfiy",
	"description": "在注册时允许你使用阿里验证码进行验证。Registration via alibaba verify service.",
	"url": "https://github.com/NodeBB-China/nodebb-plugin-registration-aliverify",
	"library": "./library.js",
	"hooks": [
		{
			"hook": "static:app.load",
			"method": "init"
		},
		{
			"hook": "filter:admin.header.build",
			"method": "addAdminNavigation"
		},
		{
			"hook": "filter:register.build",
			"method": "addverify"
		},
		{
			"hook": "filter:register.check",
			"method": "verify"
		},
		{
			"hook": "filter:filter:meta.getLinkTags",
			"method": "addhead"
		},
		{
			"hook": "filter:header.build",
			"method": "addheader"
		}
	],
	"staticDirs": {
		"static": "./static"
	},
	"templates": "./static/templates",
	"acpScripts": [
		"./static/lib/admin.js"
	]
}